---
import Section from "@/components/Section.astro";
import { projects } from "@cv";
---

<!-- <h2>Project</h2> -->
<Section title="Proyectos">
    <!-- <a href="/indexProjects">about Sonali</a> -->
    <ul>
        {
            projects.map(
                ({
                    position,
                    url,
                    description,
                    highlights,
                    name,
                    isActive,
                    preview,
                    preview_url,
                    github,
                }) => {
                    return (
                        <li>
                            <article>
                                <header>
                                    <h3>
                                        <a
                                            href={url}
                                            target="_blank"
                                            title={`Ver el proyecto ${name}`}
                                        >
                                            {name}
                                        </a>
                                        {isActive && <span> &bull;</span>}
                                        {github && (
                                            <a
                                                class="github-code-link"
                                                href={github}
                                                target="_blank"
                                                title={`Ver cÃ³digo fuente del proyecto ${name}`}
                                            />
                                        )}
                                    </h3>
                                    <p>{description}</p>
                                </header>
                                <footer>
                                    <ul>
                                        <imput id="a_pos">{position}</imput>
                                        {preview && (
                                            <button type="button" id="a_btn">
                                                Ver proceso
                                            </button>
                                        )}
                                        {highlights.map((highlight) => {
                                            return <span>{highlight}</span>;
                                        })}
                                    </ul>
                                </footer>
                            </article>
                        </li>
                    );
                },
            )
        }
    </ul>
</Section>

